<Window x:Class="BookManagementWPF.AddOrEditCustomer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookManagementWPF"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Add or Edit Customer" Height="400" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Full Name:"/>
            <TextBox Name="txtFullName" Margin="0,0,0,10"/>

            <TextBlock Text="Email:"/>
            <TextBox Name="txtEmail" Margin="0,0,0,10"/>

            <TextBlock Text="Phone:"/>
            <TextBox Name="txtPhone" Margin="0,0,0,10"/>

            <TextBlock Text="Address:"/>
            <TextBox Name="txtAddress" Margin="0,0,0,10"/>

            <TextBlock Text="Registration Date:"/>
            <DatePicker Name="dpRegistrationDate" Margin="0,0,0,10"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Save" Width="80" Click="btnSave_Click" Margin="5"/>
                <Button Content="Cancel" Width="80" Click="btnCancel_Click" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
